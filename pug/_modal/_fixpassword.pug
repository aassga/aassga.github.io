#exampleModalCenter2.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalCenterTitle', aria-hidden='true')
  .modal-dialog.modal-dialog-centered(role='document')
    .modal-content
      .modal-header
        div#exampleModalLongTitle.modal-title 修改密碼
        div.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') ×
      .modal-body
        form(style='width:100%;')
          // oldPassword input
          .form-outline
            input#oldpassword.form-control(type='text', placeholder='輸入舊密碼', name='輸入舊密碼')
          // newPassword input
          .form-outline
            input#newpassword.form-control(type='text', placeholder='輸入新密碼', name='輸入新密碼')
          // checkPassword input
          .form-outline
            input#checkpassword.form-control(type='text', placeholder='確認新密碼', name='確認新密碼')
          // Submit button
          button#send2.btn.btn-primary(type='button') 送出
